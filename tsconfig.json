{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "paths": {
      "@scrpoker/*": ["src/*"]
    }
  },

  "include": ["src"]
}
